{   "database_name" : "expendableEmployees",
    "User" : {
        "id": "ObjectId(...)",
        "firstname" : "string",
        "lastname" : "string",
        "email" : "string",
        "phone" : "string",
        "address" : "string",
        "postal_code" : "string",
        "date_of_birth" : "string",
        "password" : "string",
        "picture" : "binary"
    },

    "Company" : {
        "_id" : "ObjectId(...)",
        "name" : "string"
    },

    "Branch" : {
        "_id" : "ObjectId(...)",
        "name" : "string",
        "company_id" : "Company._id"
    },

    "Employee" : {
        "_id" : "ObjectId(...)",
        "user_id" : "User._id",
        "Position" : "string",
        "branch_id" : "Branch._id",
        "pay_rate" : "float"
    },

    "Email" : {
        "_id" : "ObjectId(...)",
        "sender" : "User._id",
        "receivers" : [
            "User._id",
            "User._id2",
            "User._id..."
        ],
        "message" : "string",
        "time_sent": "Date"
    },

    "Emails" : {
        "user_id" : {
            "email_id" : {
                "is_read" : "boolean"
            },
            "email_id2" : {
                "is_read" : "boolean"
            },
            "email_id..." : {
                "is_read" : "boolean"
            }
        }
    },

    "Announcment" : {
        "_id" : "ObjectId(...)",
        "branch" : "Branch._id",
        "sender" : "User._id",
        "time_sent" : "Date"
    },

    "WorkSchedule" : {
        "_id" : "ObjectId(...)",
        "employee" : "Employee._id",
        "start_time" : "Date",
        "end_time" : "Date",
        "time_worked_mins" : "int",
        "hourly_rate" : "float",
        "amount_paid" : "float"

    },

    "DirectMessages" : {
        "_id" : "ObjectId(...)",
        "sender" : "User._id",
        "receiver" : "User._id",
        "message" : "string",
        "time_sent": "Date"
    },

    "DirectMessage" : {
        "user_id" : {
            "message_id" : {
                "time_read" : "Date"
            },
            "message_id2" : {
                "time_read" : "Date"
            },
            "message_id..." : {
                "time_read" : "Date"
            }
        }
    }
    
}